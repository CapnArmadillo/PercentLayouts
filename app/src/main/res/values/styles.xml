<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

	<style name="Normal" parent="@android:style/TextAppearance">
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/editTextSelected</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="SortHeader" parent="@android:style/Widget">
		<item name="android:button">?android:attr/listChoiceIndicatorSingle</item>
		<item name="android:background">@color/clear</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="SortHeaderNormal" parent="@style/Normal">
		<item name="android:textSize">@dimen/label_text_height</item>
		<item name="android:textColor">@drawable/text_sort_normal</item>
	</style>

	<style name="SortHeaderBold" parent="@style/Normal">
		<item name="android:textSize">@dimen/label_text_height</item>
		<item name="android:textColor">@drawable/text_sort_bold</item>
	</style>

</resources>
