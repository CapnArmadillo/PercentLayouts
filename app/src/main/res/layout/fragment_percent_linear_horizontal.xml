<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/top_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#6ac"
        android:tag="weight = 1"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/top2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#69a"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="weight = 1"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/top3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#688"
        android:tag="weight = 1"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/top4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#676"
        android:tag="weight = 1"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/top5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#664"
        android:tag="weight = 1"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/top5aligned"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@id/top4"
        android:layout_below="@id/top5"
        android:layout_alignParentRight="true"
        android:background="#646"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="20/20\nrightAligned"
        android:gravity="center"
        android:textSize="12sp"
        />

</LinearLayout>

    