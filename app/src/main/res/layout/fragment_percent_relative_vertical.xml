<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/top_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4ac"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="20/20\ntop0\nleft0"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/left2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="20%"
        android:background="#68a"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="20/20\ntop20"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/left3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="40%"
        android:background="#868"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="20/20\ntop40"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/left4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="60%"
        android:background="#a46"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="20/20\ntop60"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/left5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="80%"
        android:background="#c24"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="20%"
        android:tag="20/20\ntop80"
        android:textSize="12sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/bottom_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#956"
        app:layout_marginLeftPercent="15%"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="30%"
        android:tag="20/30\nalignParentBottom"
        android:textSize="12sp"
        android:gravity="center"
        />

</android.support.percent.PercentRelativeLayout>

    