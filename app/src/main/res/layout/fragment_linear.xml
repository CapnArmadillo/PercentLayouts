<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
	android:orientation="vertical"
    >

    <TextView
		android:id="@+id/title"
        android:text="@string/linear"
		android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

	<RadioGroup
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:checkedButton="@+id/widthAll"
		>

		<RadioButton
			android:id="@id/widthAll"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="All widths"
			android:layout_weight="1"
			/>

		<RadioButton
			android:id="@+id/zeroDP"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="0dp"
			android:layout_weight="1"
			/>

		<RadioButton
			android:id="@+id/wrapContent"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="wrap_content"
			android:layout_weight="1"
			/>

		<RadioButton
			android:id="@+id/matchParent"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="match_parent"
			android:layout_weight="1"
			/>

	</RadioGroup>

	<RadioGroup
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:checkedButton="@+id/weightAll"
		>

		<RadioButton
			android:id="@id/weightAll"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="All weights"
			android:layout_weight="1"
			/>

		<RadioButton
			android:id="@+id/weight0"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="0"
			android:layout_weight="1"
			/>

		<RadioButton
			android:id="@+id/weight1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="1"
			android:layout_weight="1"
			/>

		<RadioButton
			android:id="@+id/weight2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="1, 2, 3"
			android:layout_weight="1"
			/>

	</RadioGroup>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

