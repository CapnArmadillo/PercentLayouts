				<Button
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:text="One"
					android:layout_weight="1"
					/>

				<Button
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:text="Two"
					android:layout_weight="2"
					/>

				<Button
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:text="Three"
