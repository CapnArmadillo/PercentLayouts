				android:id="@+id/zeroDP0label"
				android:text="LinearLayout with 0dp widths and weights = 0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

			<LinearLayout
				android:id="@+id/zeroDP0"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>

				<Button
					android:layout_width="0dp"
					android:layout_height="40dp"
					android:text="One"
					android:layout_weight="0"
					/>

				<Button
					android:layout_width="0dp"
					android:layout_height="40dp"
					android:text="Two"
					android:layout_weight="0"
					/>

				<Button
					android:layout_width="0dp"
					android:layout_height="40dp"
					android:text="Three"
					android:layout_weight="0"
					/>

			</LinearLayout>

			<TextView
				android:id="@+id/wrapContent0label"
